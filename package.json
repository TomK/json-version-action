{
  "name": "json-version-action",
  "version": "1.0.0",
  "description": "A GitHub Action which indicates when the package.json version has updated in the most recent commit",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && ncc build lib/main.js",
    "format": "prettier --write \"**/*.ts\"",
    "format-check": "prettier --check \"**/*.ts\"",
    "test": "jest"
  },
  "keywords": [
    "GitHub-Action",
    "json",
    "json-version",
    "package.json",
    "composer.json",
    "npm",
    "versioning"
  ],
  "author": "Tom Kay <oridan82@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/github": "^5.0.1",
    "semver": "^7.3.7"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/minimatch": "^3.0.5",
    "@types/node": "^17.0.25",
    "@vercel/ncc": "^0.33.4",
    "jest": "^27.5.1",
    "prettier": "^2.6.2",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.3"
  }
}
